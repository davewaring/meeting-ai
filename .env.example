# Deepgram API key (https://console.deepgram.com)
DEEPGRAM_API_KEY=your_deepgram_key_here

# Anthropic API key (https://console.anthropic.com)
ANTHROPIC_API_KEY=your_anthropic_key_here

# Twilio (https://console.twilio.com)
TWILIO_ACCOUNT_SID=your_sid_here
TWILIO_AUTH_TOKEN=your_token_here
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# Zoom dial-in (default US number, configurable)
ZOOM_DIAL_IN_NUMBER=+16465588656

# BrainDrive Library path
LIBRARY_PATH=~/BrainDrive-Library

# Transcript paths
TRANSCRIPT_FILE_PATH=~/meeting-ai/transcript-live.txt
VTT_OUTPUT_DIR=~/BrainDrive-Library/transcripts

# Audio volume (BlackHole local mode only)
SPEAKER_VOLUME=1.0
MIC_VOLUME=1.0

# Speaker diarization
ENABLE_DIARIZATION=true

# WebSocket server (for Twilio Media Streams)
WS_HOST=0.0.0.0
WS_PORT=8765

# Monitor settings
MONITOR_MODEL=claude-sonnet-4-5-20250929
MONITOR_COOLDOWN=45
MONITOR_MIN_NEW_LINES=5

# TTS
TTS_PROVIDER=openai
TTS_VOICE=alloy
OPENAI_API_KEY=your_openai_key_here
ELEVENLABS_API_KEY=
